[{ "css" : "background-color",
   "name" : "Background Color",
   "desc" : "The background color.",
   "format" : "txt",
   "cfg" : 
     { "regex" : "^#([0-9A-F]{3}|[0-9A-F]{6})$",
       "regext" : "i",
       "options" : null,
       "restrict" : false }
 },
 
 { "css" : "opacity",
   "name" : "Opacity",
   "desc" : "",
   "format" : "num",
   "cfg" :
     { "range" : [0, 1] }  
 },

 { "css" : "z-index",
   "name" : "Z Index",
   "desc" : "",
   "format" : "num",
   "cfg" :
     {  "range" : [-100, 100] }  
 },
 
 { "css" : "top",
   "name" : "Top",
   "desc" : "",
   "format" : "num",
   "cfg" :
    { "units" : "px", 
      "range" : null } 
 },
 
 { "css" : "left",
   "name" : "Left",
   "desc" : "",
   "format" : "num",
   "cfg" :
    { "units" : "px", 
      "range" : null } 
 },
 
 { "css" : "width",
   "name" : "Width",
   "desc" : "",
   "format" : "num",
   "cfg" :
    { "units" : "px", 
      "range" : null } 
 },
 
 { "css" : "height",
   "name" : "Height",
   "desc" : "",
   "format" : "num",
   "cfg" : { }
 },
 
 { 
   "css" : "x-aspect",
   "name" : "Aspect Ratio",
   "desc" : "",
   "format" : "num",
   "cfg" :  
     {  
       "range" : [-100, 100], 
       "enabled" : false }  
 },
 
 { "css" : "font-family",
   "name" : "Font",
   "desc" : "",
   "format" : "txt",
   "cfg" :
     { "options" : [ "Arial", "Courier", "Calibri", "Cambria", 
                     "Helvetica", "Garamond", "Georgia", "Times", 
                     "Verdana", 
                     "serif", "sans-serif", "cursive", "fantasy", 
                     "monospace"],
       "restrict" : false } 
 },
 
 { "css" : "color",
   "name" : "Font Color",
   "desc" : "",
   "format" : "txt",
   "cfg" : 
     { "regex" : "^#([0-9A-F]{3}|[0-9A-F]{6})$",
       "regext" : "i",
       "options" : null,
       "restrict" : false }
 },
 
